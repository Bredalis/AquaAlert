<Home>:
    name: "home"

    BoxLayout:
        Image:
            source: "assets/images/home_background.png"

            Label:
                text: "Drink water regularly"
                pos: 150, 500,
                color: (0.071, 0.416, 0.427) 
                font_size: 25
                font_name: "assets/fonts/MulledWineSeason.otf"

            Label:
                text: "throughout the day."
                pos: 150, 475
                color: (0.071, 0.416, 0.427)
                font_size: 25
                font_name: "assets/fonts/MulledWineSeason.otf"

            Button:
                id: login_section
                text: "Login Section"
                on_press: root.login_section_page()            
