<Recordatorio>:
	name: "recordatorio"

	BoxLayout:
		Image:
			source: "Assets/Fondo_Recordatorio.png"

			Label:
				text: "Recordatorio"
				pos: 150, 450,
				color: (0.071, 0.416, 0.427) 
				font_size: 30
				font_name: "Assets/MulledWineSeason.otf"

			Label:
				text: "Personalizado"
				pos: 150, 420,
				color: (0.071, 0.416, 0.427) 
				font_size: 30
				font_name: "Assets/MulledWineSeason.otf"

			TextInput:
				id: tiempo
				hint_text: "00.00.00"
				hint_text_color: (0.071, 0.416, 0.427)
				foreground_color: (0.071, 0.416, 0.427)
				background_color: (0.8314, 0.9098, 0.9098)
				pos: 135, 330
				size_hint: None, None
				width: 130
				height: 40
				halign: "center"
				font_name: "Assets/MulledWineSeason.otf"
				font_size: 20

			Label:
				id: mensaje_error_1
				text: ""
				pos: 50, 220,
				color: (0.071, 0.416, 0.427) 
				font_size: 20
				font_name: "Assets/MulledWineSeason.otf"

			Label:
				id: mensaje_error_2
				text: ""
				pos: 50, 190,
				color: (0.071, 0.416, 0.427) 
				font_size: 20
				font_name: "Assets/MulledWineSeason.otf"

			Button:
				text: "Notificarme"
				pos: 190, 230,
				size_hint: None, None
    			color:  (0.071, 0.416, 0.427)
				font_name: "Assets/MulledWineSeason.otf"    			
				width: 100
				height: 40
				on_press: root.notificacion()
				background_color: (212, 232, 232)

			Button:
				background_normal: "Assets/Home.png"
				background_down: "Assets/Home.png"
				pos: 20, 30,
				on_press: root.pagina_principal()

			Button:
				background_normal: "Assets/Recordatorio.png"
				background_down: "Assets/Recordatorio.png"
				on_press: root.pagina_recordatorio()	
				pos: 140, 30

			Button:
				background_normal: "Assets/Progreso.png"
				background_down: "Assets/Progreso.png"
				on_press: root.pagina_progreso()
				pos: 245, 30